<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_managed_service_reminder" model="mail.template">
            <field name="model_id" ref="model_warranty_request" />
            <field name="name">Reminder: Approval Required for Managed Service</field>
            <field name="email_from">{{ object.create_uid.email or 'noreply@example.com' }}</field>
            <field name="subject">Reminder: Action Required - Approval Pending</field>
            <field name="email_cc">cebendemalek@gmail.com</field>
            <field name="body_html" type="html">
                <p>
                    <t t-foreach="object._get_managed_service_emails()" t-as="user">
                        <t>Dear <t t-out="user.name" />,</t>
                        <br />
                    </t>
                </p>
                <p>This is a reminder that the following record is pending your approval:</p>
                <ul>
                    <li>Record ID: <t t-out="object.id"/></li>
                    <li>Description: <t t-out="object.name or ''"/></li>
                </ul>
                <p>Please review and take necessary actiom </p>
                <p>You can view the details of the request </p>
                <p>Thank you for your attention to this matter.</p>
                <p>Best regards,<br />CCTZ</p>
            </field>
            <field name="auto_delete">False</field>
        </record>

