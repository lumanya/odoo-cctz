<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Asset Move Form View -->
    <record model="ir.ui.view" id="asset_move_form">
      <field name="name">asset_move.form</field>
      <field name="model">asset.move</field>
      <field name="arch" type="xml">
        <form string="Asset Move">
          <sheet>
            <div class="oe_title"> Asset Number <h1>
                <field name="asset_id" />
              </h1>
            </div>
            <group>
              <group>
                               
                <field name="asset_name" />
                <field name="date" />
                <field name="device_purpose" />
                <field name="supplier_id" />
                <field name="device_part_number" />
                <field name="quantity" />
                <field name="order_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" />
                <field name="customer_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" />
                <field name="sales_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" />
                <field name="technician_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'technician')]}" />
                <field name="employee_id" attrs="{'invisible': [('device_purpose', '!=', 'employee')]}" />
                <field name="move_date" />
                <field name="status" />
                <field name="return_date" attrs="{'invisible': [('status', '=', 'assigned')]}" />
                <field name="return_condition" attrs="{'invisible': [('status', '=', 'assigned')]}" />
              </group>
            </group>
            <notebook>
              <page string="Description">
                <field name="description" widget='html' />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="message_ids" options="{'post_refresh': 'always'}" />
          </div>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="asset_move_custom_tree_view">
      <field name="name">asset.move.custom.tree</field>
      <field name="model">asset.move</field>
      <field name="arch" type="xml">
        <tree string="Asset move - Customer">
          <field name="asset_id" />
          <field name="asset_name" />
          <field name="customer_id" />
          <field name="order_id" />
          <field name="quantity" />
          <field name="move_date" />
          <field name="status" />
          <field name="return_date" />
          <field name="return_condition" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="asset_move_employee_tree_view">
      <field name="name">asset.move.employee.tree</field>
      <field name="model">asset.move</field>
      <field name="arch" type="xml">
        <tree string="Asset move - Employee">
          <field name="asset_id" />
          <field name="asset_name" />
          <field name="employee_id" />
          <field name="move_date" />
          <field name="device_part_number" />
          <field name="status" />
          <field name="return_date" />
          <field name="return_condition" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="asset_move_technician_tree_view">
      <field name="name">asset.move.technician.tree</field>
      <field name="model">asset.move</field>
      <field name="arch" type="xml">
        <tree string="Asset move - Technicians">
          <field name="asset_id" />
          <field name="asset_name" />
          <field name="technician_id" />
          <field name="device_part_number" />
          <field name="move_date" />
          <field name="status" />
          <field name="return_date" />
          <field name="return_condition" />
        </tree>
      </field>
    </record>

    <!-- Actions for Filtered Views -->
    <record model="ir.actions.act_window" id="asset_move_customer_action">
      <field name="name">Asset Moves - Customer</field>
      <field name="res_model">asset.move</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="asset_move_custom_tree_view" />
      <field name="domain">[('device_purpose', '=', 'customer')]</field>
    </record>

    <record model="ir.actions.act_window" id="asset_move_technician_action">
      <field name="name">Asset Moves - Technician</field>
      <field name="res_model">asset.move</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="asset_move_technician_tree_view" />
       <field name="domain">[('device_purpose', '=', 'technician')]</field>
    </record>

    <record model="ir.actions.act_window" id="asset_move_employee_action">
      <field name="name">Asset Moves - Employee</field>
      <field name="res_model">asset.move</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="asset_move_employee_tree_view" />
       <field name="domain">[('device_purpose', '=', 'employee')]</field>
    </record>

    <!-- Menu Items -->

    <menuitem name="Asset Move" id="asset_move_menu_root" sequence="11"
      parent="asset_management_menu_root" />

    <!-- Sub-menus under Asset Move -->
    <menuitem name="Customer Moves" id="asset_move_customer_menu"
      parent="asset_move_menu_root" action="asset_move_customer_action" sequence="1" />
    <menuitem name="Technician Moves" id="asset_move_technician_menu"
      parent="asset_move_menu_root" action="asset_move_technician_action" sequence="2" />

    <!-- Separate Menu for Employee -->
    <menuitem name="Employee Moves" id="asset_move_employee_menu"
      parent="asset_management_menu_root" action="asset_move_employee_action" sequence="12" />

  </data>
</odoo>