<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Asset Move Form View -->
    <record model="ir.ui.view" id="asset_move_form">
      <field name="name">asset_move.form</field>
      <field name="model">asset.move</field>
      <field name="arch" type="xml">
        <form string="Asset Move">
          <sheet>
            <div class="oe_title"> Asset Number <h1>
                <field name="asset_id" />
              </h1>
            </div>
            <group>
              <group>
                <field name="asset_name" />
                <field name="device_purpose" />
                <field name="quantity" />
                <field name="date" />
                <field name="supplier_id" />
                <field name="device_part_number" />
              </group>

              <group>
                <!-- <field name="order_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" /> -->
                <!-- <field name="customer_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" /> -->
                <!-- <field name="sales_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'customer')]}" /> -->
                <!-- <field name="technician_id"
                  attrs="{'invisible': [('device_purpose', '!=', 'technician')]}" /> -->
                <!-- <field name="employee_id_move"
                  attrs="{'invisible': [('device_purpose', '!=', 'employee')]}" /> -->
                <field name="move_date"
                  attrs="{'invisible' : ['|', ('device_purpose', '=', 'service_delivery'), ('device_purpose', '=', 'employee_assigned')]}" />
                <field name="status"
                  attrs="{'invisible' : ['|', ('device_purpose', '=', 'service_delivery'), ('device_purpose', '=', 'employee_assigned')]}" />
                <field name="status_tech"
                  attrs="{'invisible': [('device_purpose', 'not in', ['service_delivery', 'employee_assigned'])]}" />
                <field name="return_date"
                  attrs="{'invisible': ['|', ('status', '=', 'assigned'), ('device_purpose', '=', 'service_delivery'), ('device_purpose', '=', 'employee_assigned')]}" />
                <field name="return_condition"
                  attrs="{'invisible': ['|', ('status', '=', 'assigned'), ('device_purpose',  '=', 'service_delivery'), ('device_purpose', '=', 'employee_assigned')]}" />
              </group>
            </group>
            <notebook>\ <page string="Description">
                <field name="display_description" widget='html' />
              </page>
              <page
                string="Technician Bin"
                attrs="{'invisible': [('device_purpose', '!=', 'service_delivery')]}">
                <field name="asset_move_history_ids">
                  <tree editable="bottom">
                    <field name="technician_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="return_condition_tech" />
                  </tree>
                </field>
              </page>
              <page
                string="Employee Bin"
                attrs="{'invisible': [('device_purpose', '!=', 'employee_assigned')]}">
                <field name="asset_move_employee_ids">
                  <tree editable="bottom">
                    <field name="employee_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="return_condition_tech" />
                  </tree>
                </field>

              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="message_ids" options="{'post_refresh': 'always'}" />
          </div>
        </form>
      </field>
    </record>

